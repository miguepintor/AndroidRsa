<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/template"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="30dp"
    android:paddingRight="30dp" >

    <TextView
        android:id="@+id/pick_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="@string/pick_photo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="129dp"
        android:layout_height="129dp"
        android:layout_gravity="center_horizontal"
        android:clickable="true"
        android:contentDescription="@string/image_description"
        android:onClick="onClickPickImage"
        android:src="@drawable/nophoto" />

    <TextView
        android:id="@+id/certificate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:text="@string/certificate"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/button_pick_certificate"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/certificate"
        android:onClick="onClickButtonPickCertificate"
        android:text="@string/choose_certificate" />

    <Button
        android:id="@+id/button_done"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@color/background_floating_material_dark"
        android:onClick="onClickButtonDone"
        android:text="@string/done"
        android:textColor="@color/background_material_light" 
        android:textSize="20sp" >
    </Button>

</LinearLayout>